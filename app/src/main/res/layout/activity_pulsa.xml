<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/backgroud"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gpriatmaja.pulsaku.Pulsa">

    <Spinner
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/providersp"
        android:entries="@array/provider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/nominalsp"
        android:entries="@array/nominal"
        android:layout_below="@+id/providersp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Masukkan No Telp"
        android:ems="10"
        android:id="@+id/nomorEdit"
        android:layout_below="@+id/nominalsp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/nominalsp"
        android:layout_alignEnd="@+id/nominalsp" />

    <Spinner
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/hargasp"
        android:entries="@array/harga"
        android:layout_below="@+id/nomorEdit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:text="Kirim"
        android:id="@+id/kirimbt"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
