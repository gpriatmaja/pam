<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroud"
    tools:context="com.gpriatmaja.pulsaku.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/pulsabt"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="5dp"
            android:elevation="1dp"
            android:scaleType="centerInside"
            android:background="@drawable/mpulsa"
            android:layout_row="0"
            android:layout_column="0" />
        <ImageButton
            android:id="@+id/paketanbt"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="5dp"
            android:elevation="1dp"
            android:scaleType="centerInside"
            android:background="@drawable/mpaketdata"
            android:layout_row="0"
            android:layout_column="1" />
        <ImageButton
            android:id="@+id/listrikbt"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="5dp"
            android:elevation="1dp"
            android:scaleType="centerInside"
            android:background="@drawable/mlistrik"
            android:layout_row="1"
            android:layout_column="0" />
        <ImageButton
            android:id="@+id/laporanbt"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="5dp"
            android:elevation="1dp"
            android:scaleType="centerInside"
            android:background="@drawable/mlaporan"
            android:layout_row="1"
            android:layout_column="1" />

    </GridLayout>
</RelativeLayout>
